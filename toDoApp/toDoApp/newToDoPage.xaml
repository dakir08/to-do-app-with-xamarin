<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="toDoApp.newToDoPage">
    <StackLayout Margin="20" VerticalOptions="StartAndExpand">
        <Label Text="Task Name" />
        <Entry Text="{Binding Name}" Placeholder="Write the name of task" />
        <Label Text="Task Description" />
        <Entry Text="{Binding Description}" Placeholder="Write the description of the task" />
        <Label Text="Task finish" />
        <Switch IsToggled="{Binding isDone}" />
        <Button Text="Save" Clicked="onSave" />
        <Button Text="Delete" Clicked="onDelete" />
    </StackLayout>
</ContentPage>